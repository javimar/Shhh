<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.javimar.shhh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.javimar.shhh.MainActivity" />
        </activity>

        <activity
            android:name=".view.AboutActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.javimar.shhh.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />

        <receiver
            android:name=".sync.GeofenceTransitionsBroadcastReceiver"
            android:exported="false"/>

        <provider
            android:name="eu.javimar.shhh.model.PlaceContentProvider"
            android:authorities="eu.javimar.shhh"
            android:exported="false"/>

        <!--This is required for immediate syncs -->
        <service
            android:name=".sync.RegisteringIntentService"
            android:exported="false"/>

        <service
            android:exported="false"
            android:name=".sync.GeofenceRegistrationFirebaseJobService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

    </application>

</manifest>